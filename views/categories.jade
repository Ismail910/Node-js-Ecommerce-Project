extends layout

block content
    section
        .container
            .row
                .features_items
                    h2.title.text-center Product Categories
                    if categories
                        each category in categories
                            .col-sm-3
                                a(href='/cat/' + category.CategorySlug)
                                    .product-image-wrapper
                                        .single-products
                                            .catinfo.text-center
                                                h2=category.CategoryName
                                                img(src='/img/categories/' + category.Image, alt=category.CategoryName)