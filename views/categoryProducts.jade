extends layout

block content
    section
        .container
            .row
                .col-sm-3
                    // nav-bar
                    .left-sidebar.shadow
                        #accordian.panel-group.category-products
                            .panel.panel-default
                                .panel-heading
                                    h4.panel-title
                                        a(href='/cat/all') All Products
                            h2
                            each category in categories
                                .panel.panel-default
                                    .panel-heading
                                        h4.panel-title
                                            a(href='/cat/' + category.CategorySlug)= category.CategoryName
                    ///nav-bar
                // category_products
                .col-sm-9
                    .features_items
                        h2.title
                            = title
                        if products
                            each product in products
                                - var productUrl = '/cat/' + product.CategorySlug + '/' + product.ProductSlug;
                                .col-sm-4
                                    .product-image-wrapper.shadow.p-4
                                        .single-products
                                            .productinfo.text-center
                                                p
                                                    a.text-danger(href=productUrl)=product.ProductName
                                                a(href=productUrl)
                                                    img(src='/img/products/' + product.Image, alt=product.ProductName)
                                                h2=  product.ProductPrice +' EGP ' 
                                                form(action='/cart/' + product.ProductID + '/add', method='POST')
                                                    button.btn.btn-danger(type='submit')
                                                        i.fa.fa-shopping-cart
                                                        | Add to cart
            ///category_products